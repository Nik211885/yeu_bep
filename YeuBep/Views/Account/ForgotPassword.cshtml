@model YeuBep.ViewModels.Account.ForgotPasswordViewModel;

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="bi bi-key-fill text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h2 class="fw-bold text-primary">Quên Mật Khẩu?</h2>
                        <p class="text-muted">Nhập email của bạn để nhận liên kết đặt lại mật khẩu</p>
                    </div>

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>@ViewBag.Message
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="ForgotPassword" method="post">
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-semibold">
                                <i class="bi bi-envelope-fill me-2"></i>Địa chỉ Email
                            </label>
                            <input asp-for="Email" 
                                   class="form-control form-control-lg" 
                                   placeholder="example@email.com"
                                   autocomplete="email"
                                   autofocus />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Chúng tôi sẽ gửi liên kết đặt lại mật khẩu đến email này
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg fw-semibold">
                                <i class="bi bi-send-fill me-2"></i>Gửi Liên Kết
                            </button>
                            
                            <a asp-action="Login" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left me-2"></i>Quay Lại Đăng Nhập
                            </a>
                        </div>

                        <div class="text-center mt-4">
                            <p class="text-muted mb-0 small">
                                Chưa có tài khoản? 
                                <a asp-action="Register" class="text-decoration-none fw-semibold">Đăng ký ngay</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="card border-0 bg-light mt-3">
                <div class="card-body p-4">
                    <h6 class="fw-bold mb-3">
                        <i class="bi bi-lightbulb-fill text-warning me-2"></i>Lưu ý:
                    </h6>
                    <ul class="small text-muted mb-0">
                        <li class="mb-2">Kiểm tra cả hộp thư spam/junk nếu không thấy email</li>
                        <li class="mb-2">Liên kết đặt lại mật khẩu có hiệu lực trong 24 giờ</li>
                        <li>Nếu không nhận được email, vui lòng thử lại sau vài phút</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>