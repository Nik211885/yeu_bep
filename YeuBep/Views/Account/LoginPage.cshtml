@{
    string? returnUrl = ViewData["ReturnUrl"] as string;
}
@model YeuBep.ViewModels.Account.LoginViewModel;
<link rel="stylesheet" href="~/css/account/login-page.css" />


<div class="login-container">
    <div class="login-card">
        <div class="login-body">
            <form asp-action="Login" method="post">
                <input type="hidden" asp-for="@ViewData["ReturnUrl"]" />
                
                <div>
                    <img class="logo" src="~/images/logo.png"  alt=""/>
                    <h3 class="px-5 pt-2 pb-4 text-center">Đăng nhập vào tài khoản của bạn</h3>
                </div>
                
                <div class="form-group">
                    <label asp-for="UserNameOrEmail">
                        <i class="fas fa-user"></i> Tên đăng nhập hoặc Email
                    </label>
                    <div class="input-icon">
                        <i class="fas fa-user"></i>
                        <input asp-for="UserNameOrEmail" class="form-control" placeholder="Nhập tên đăng nhập hoặc email" />
                    </div>
                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Password">
                        <i class="fas fa-lock"></i> Mật khẩu
                    </label>
                    <div class="input-icon">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="form-check d-flex justify-content-between">
                    <div>
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox"/>
                        <label asp-for="RememberMe" class="form-check-label">
                            Ghi nhớ đăng nhập
                        </label>
                    </div>
                    <a href="@Url.Action("ForgotPassword")">
                        Quên mật khẩu?
                    </a>
                </div>
                
                <button type="submit" class="btn btn-login">
                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                </button>
                
                <div class="divider">
                    <span>HOẶC</span>
                </div>
                <div>
                    <a href="@Url.Action("Register")"  class="btn btn-google">
                        <img src="~/images/logo.png" alt=""/>
                        Đăng kí tài khoản mới
                    </a>
                    <br/>
                    <button asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Google" class="btn btn-google">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" width="20px" height="20px">
                            <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24c0,11.045,8.955,20,20,20c11.045,0,20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"/>
                            <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"/>
                            <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"/>
                            <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z"/>
                        </svg>
                        Đăng nhập với Google
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
