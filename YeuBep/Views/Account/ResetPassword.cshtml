@model YeuBep.ViewModels.Account.ResetPasswordViewModel
<link rel="stylesheet" href="~/css/account/reset-password.css" />
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="bi bi-shield-lock-fill text-success" style="font-size: 3rem;"></i>
                        </div>
                        <h2 class="fw-bold text-primary">Đặt Lại Mật Khẩu</h2>
                        <p class="text-muted">Tạo mật khẩu mới cho tài khoản của bạn</p>
                    </div>

                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>@ViewBag.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewBag.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="ResetPassword" method="post">
                        
                        <!-- Hidden fields cho token và email -->
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="Token" />
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold">
                                <i class="bi bi-lock-fill me-2"></i>Mật Khẩu Mới
                            </label>
                            <div class="input-group">
                                <input asp-for="Password" 
                                       type="password" 
                                       class="form-control form-control-lg" 
                                       placeholder="Nhập mật khẩu mới"
                                       id="passwordInput" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Mật khẩu phải có ít nhất 6 ký tự
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                                <i class="bi bi-shield-check-fill me-2"></i>Xác Nhận Mật Khẩu
                            </label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" 
                                       type="password" 
                                       class="form-control form-control-lg" 
                                       placeholder="Nhập lại mật khẩu mới"
                                       id="confirmPasswordInput" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg fw-semibold">
                                <i class="bi bi-check-circle-fill me-2"></i>Đặt Lại Mật Khẩu
                            </button>
                            
                            <a asp-action="Login" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left me-2"></i>Quay Lại Đăng Nhập
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Yêu cầu mật khẩu -->
            <div class="card border-0 bg-light mt-3">
                <div class="card-body p-4">
                    <h6 class="fw-bold mb-3">
                        <i class="bi bi-info-circle-fill text-info me-2"></i>Yêu cầu mật khẩu:
                    </h6>
                    <ul class="small text-muted mb-0" id="passwordRequirements">
                        <li class="mb-2" id="req-length">
                            <i class="bi bi-circle text-secondary me-2"></i>Ít nhất 6 ký tự
                        </li>
                        <li class="mb-2" id="req-uppercase">
                            <i class="bi bi-circle text-secondary me-2"></i>Có chữ hoa (khuyến nghị)
                        </li>
                        <li class="mb-2" id="req-number">
                            <i class="bi bi-circle text-secondary me-2"></i>Có số (khuyến nghị)
                        </li>
                        <li id="req-special">
                            <i class="bi bi-circle text-secondary me-2"></i>Có ký tự đặc biệt (khuyến nghị)
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

