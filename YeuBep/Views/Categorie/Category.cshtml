@using Org.BouncyCastle.Crypto.Engines
@using YeuBep.Helpers
@model List<YeuBep.ViewModels.Category.CategoryViewModel>
<link rel="stylesheet" href="~/css/categories/caregory.css" />

<div class="page-header">
    <h1 class="page-title">Danh Mục Món Ăn</h1>
    <p class="page-subtitle">Khám phá các món ăn theo danh mục yêu thích của bạn</p>
</div>

<div class="container">
    <!-- Filter Section -->
    <div class="filter-section">
        <div class="filter-title">
            <i class="bi bi-funnel"></i> Lọc theo loại
        </div>
        <div class="filter-buttons">
            <button class="filter-btn active">Tất cả</button>
            <button class="filter-btn">Món Việt</button>
            <button class="filter-btn">Món Á</button>
            <button class="filter-btn">Món Âu</button>
            <button class="filter-btn">Tráng Miệng</button>
            <button class="filter-btn">Healthy</button>
            <button class="filter-btn">Đồ Uống</button>
        </div>
    </div>

    <!-- Stats Bar -->
    <div class="stats-bar">
        <div class="total-count">
            <strong>@Model.Count danh mục</strong> có sẵn
        </div>
        <select class="sort-dropdown">
            <option>Sắp xếp: Phổ biến</option>
            <option>Sắp xếp: A-Z</option>
            <option>Sắp xếp: Số công thức</option>
        </select>
    </div>

    <!-- Categories Grid -->
    <div class="categories-grid">
        <!-- Category 1 -->
        @{
            int topPopularcategory = 0;
            foreach (var category in Model)
            {
                topPopularcategory += 1;
                <div class="category-card-wrapper">
                    <a href="@Url.Action("Slug", "Category", new {slug = category.Slug})" class="category-card">
                        @if (topPopularcategory <= 3)
                        {
                            <span class="popular-badge">Phổ biến</span>
                        }
                        <div class="category-image">
                            <img class="category-image" src="@category.Avatar" alt=""/>
                        </div>
                        <div class="category-content">
                            <h3 class="category-name">@category.Title</h3>
                            <p class="category-description">@StringHelper.SplitWord(category.Description,10)</p>
                            <div class="category-meta">
                                <span class="recipe-count">
                                    <i class="bi bi-book"></i> @category.CountRecipe công thức
                                </span>
                                <span class="view-recipes-link">
                                    Xem món <i class="bi bi-arrow-right"></i>
                                </span>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
</div>
