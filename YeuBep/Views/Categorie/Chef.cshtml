@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using YeuBep.Data
@using YeuBep.Entities
@model List<YeuBep.ViewModels.Account.UserViewModel>
@inject UserManager<User> UserManager;
@inject YeuBepDbContext DbContext;
@{
    var countChef = await UserManager.Users.Where(x => x.EmailConfirmed).CountAsync();

    async Task<int> CountRecipeByChef(string chefId)
    {
        return await DbContext.Recipes
            .Where(x => x.RecipeStatus == RecipeStatus.Accept)
            .Where(x=>x.CreatedById == chefId)
            .CountAsync();
    }
    async Task<int> CountRating(string chefId)
    {
        var ratingCount = await DbContext.Recipes
            .Where(x => x.RecipeStatus == RecipeStatus.Accept)
            .GroupBy(x => x.CreatedById)
            .Select(x => new
            {
                UserId = x.Key,
                TotalRatingPoint = x.Sum(g => g.TotalRatingPoint),
                CountRatingPoint = x.Sum(g => g.CountRatingPoint)
            })
            .Where(x => x.UserId == chefId)
            .FirstOrDefaultAsync();
        if (ratingCount is null)
        {
            return 0;
        }

        var rating = ratingCount.TotalRatingPoint / (ratingCount.CountRatingPoint == 0 ? 1 : ratingCount.CountRatingPoint);
        return rating;
    }
}
<link rel="stylesheet" href="~/css/categories/chef.css"/>

<div class="page-header">
        <div class="header-content">
            <h1 class="page-title">👨‍🍳 Đầu Bếp Của Chúng Tôi</h1>
            <p class="page-subtitle">Khám phá những đầu bếp tài năng và công thức đặc biệt của họ</p>
        </div>
    </div>

    <div class="container">
        <!-- Search and Filter -->
        <div class="search-filter-section">
            <div class="search-box">
                <i class="bi bi-search"></i>
                <input type="text" placeholder="Tìm kiếm đầu bếp...">
            </div>
            <select class="filter-dropdown">
                <option>Tất cả chuyên môn</option>
                <option>Món Việt</option>
                <option>Món Âu</option>
                <option>Món Á</option>
                <option>Tráng miệng</option>
            </select>
            <select class="filter-dropdown">
                <option>Sắp xếp: Phổ biến</option>
                <option>Sắp xếp: A-Z</option>
                <option>Sắp xếp: Công thức nhiều nhất</option>
            </select>
        </div>

        <div class="stats-info">
            <strong>@countChef đầu bếp</strong> đang hoạt động
        </div>

        <!-- Top Chefs Section -->
        <div class="top-chefs-section">
            <h2 class="section-title">
                <i class="bi bi-star-fill" style="color: #feca57;"></i>
                Đầu Bếp Hàng Đầu
            </h2>
            <div class="top-chefs-list">
                @for(int i =0 ; i < (Model.Count >=3 ? 3 : Model.Count); i++){
                    var chef = Model.ElementAt(i);
                    <a href="@Url.Action("GetChefById","Category", new {Id = chef.Id})" class="top-chef-item">
                        <span class="top-rank gold">@(i+1)</span>
                        <div class="top-avatar">
                            <img class="top-avatar" src="@chef.Avatar"/>
                        </div>
                        <div class="top-info">
                            <div class="top-name">@chef.FullName</div>
                            <div class="top-recipes">@await CountRecipeByChef(chef.Id) Công thức</div>
                        </div>
                    </a>
                }
            </div>
        </div>

        <!-- Chefs Grid -->
        <div class="chefs-grid">
            <!-- Chef Card 1 -->
            @foreach (var chef in Model)
            {
                <div class="chef-card">
                    <span class="verified-badge">
                        <i class="bi bi-check-circle-fill"></i> Xác thực
                    </span>
                    <div class="chef-header">
                        <div class="chef-avatar">
                            <img class="chef-avatar" src="@chef.Avatar"/>
                        </div>
                        <div class="chef-info">
                            <h3 class="chef-name">@chef.FullName</h3>
                            <div class="chef-title">Đầu Bếp Chuyên Nghiệp</div>
                            <div class="chef-location">
                                <i class="bi bi-geo-alt"></i> @chef.Address
                            </div>
                        </div>
                    </div>

                    <div class="chef-bio">
                        @chef.Bio
                    </div>

                    <div class="chef-stats">
                        <div class="stat-item">
                            <span class="stat-number">@await CountRecipeByChef(chef.Id)</span>
                            <span class="stat-label">Công thức</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">@await CountRating(chef.Id)</span>
                            <span class="stat-label">Đánh giá</span>
                        </div>
                    </div>

                    <div class="chef-specialties">
                        <div class="specialty-label">Chuyên môn:</div>
                        <div class="specialty-tags">
                            @foreach (var major in chef.Majors)
                            {
                                <span class="specialty-tag">@major</span>
                            }
                        </div>
                    </div>

                    <div class="chef-actions">
                        <a href="@Url.Action("GetChefById","Category", new {Id = chef.Id})" class="btn btn-secondary">
                            <i class="bi bi-eye"></i> Xem hồ sơ
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>