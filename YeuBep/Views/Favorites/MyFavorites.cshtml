@model PaginationViewModel<YeuBep.ViewModels.Recipe.RecipeViewModel>
<link rel="stylesheet" href="~/css/recipe/my-favorites.css" />

<div class="container py-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-heart-fill text-danger fs-1 me-3"></i>
                <h1 class="display-5 fw-bold mb-0">Các công thức nấu ăn yêu thích</h1>
            </div>
            <p class="text-muted">Bộ sưu tập những món ăn bạn yêu thích nhất</p>
            <hr class="border-2 border-danger opacity-50">
        </div>
    </div>

    @if (Model.Items.Count == 0) 
    {
        <!-- Empty State -->
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card border-0 shadow-sm text-center py-5">
                    <div class="card-body">
                        <div class="mb-4">
                            <i class="bi bi-heart text-muted" style="font-size: 5rem; opacity: 0.3;"></i>
                        </div>
                        <h3 class="h4 fw-semibold mb-3">Bạn chưa có công thức yêu thích nào!</h3>
                        <p class="text-muted mb-4">
                            Hãy khám phá và lưu lại những công thức nấu ăn yêu thích của bạn
                        </p>
                        <a href="@Url.Action("Recipe", "Recipe")" class="btn btn-danger btn-lg px-4">
                            <i class="bi bi-search me-2"></i>Khám phá công thức
                        </a>
                    </div>
                </div>
            </div>
        </div>
    } 
    else 
    {
        <!-- Recipe Grid -->
        <div class="row g-4 mb-5">
            @foreach (var item in Model.Items) 
            {
                <div class="col-lg-4 col-md-6">
                    @await Component.InvokeAsync("RecipeComponent", item)
                </div>
            }
        </div>

        <!-- Pagination -->
        @await Component.InvokeAsync("PaginationComponent", Model.PaginationView)
    }
</div>
