@model PaginationViewModel<object>  

@{
    var buttonTableTypes = new List<ButtonConfig>
    {
        new ButtonConfig { Type = ButtonTableType.Add, Controller = "Recipe", Action = "Create" },
        new ButtonConfig { Type = ButtonTableType.Edit, Controller = "Recipe", Action = "Edit" },
        new ButtonConfig { Type = ButtonTableType.Delete, Controller = "api/recipe", Action = "delete" }
    };
    @(await Component.InvokeAsync("TableComponent", new { model = Model, buttonConfig = buttonTableTypes }))
}