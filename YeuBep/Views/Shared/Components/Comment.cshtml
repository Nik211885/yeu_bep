@using YeuBep.Helpers
@model YeuBep.ViewModels.Comment.CommentViewModel
@{
    var model = Model;
}
<link rel="stylesheet" href="~/css/components/comment.css" />

<div class="card border-0 shadow-sm mb-3 comment-card">
    <div class="card-body p-3 p-md-4">
        <div class="d-flex gap-3">
            <!-- Avatar -->
            <div class="flex-shrink-0">
                @{
                    var userName = Model?.CreatedBy?.UserName ?? "Người dùng";
                    var avatarUrl = !string.IsNullOrWhiteSpace(Model?.CreatedBy?.Avatar) && Model.CreatedBy.Avatar.StartsWith("http")
                        ? Model.CreatedBy.Avatar
                        : $"https://ui-avatars.com/api/?name={Uri.EscapeDataString(userName)}&background=667eea&color=fff&size=48";
                }
                <img src="@avatarUrl" 
                     class="rounded-circle user-avatar" 
                     alt="@userName"
                     onerror="this.onerror=null; this.src='https://ui-avatars.com/api/?name=@Uri.EscapeDataString(userName)&background=667eea&color=fff&size=48';">
            </div>

            <!-- Content -->
            <div class="flex-grow-1">
                <!-- Header -->
                <div class="d-flex align-items-center gap-2 mb-1">
                    <h6 class="mb-0 fw-semibold text-dark">@userName</h6>
                </div>

                <!-- Time -->
                <div class="d-flex align-items-center gap-1 text-muted mb-2" style="font-size: 0.813rem;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71z"/>
                        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16m7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0"/>
                    </svg>
                    <span>@DateTimeHelper.ConvertDateTimeZoneFormat(Model?.CreatedDate ?? DateTimeOffset.UtcNow)</span>
                </div>

                <!-- Comment Text -->
                <p class="mb-0 text-secondary" style="line-height: 1.6; font-size: 0.938rem;">
                    @Model?.CommentText
                </p>
            </div>
        </div>
    </div>
</div>
