@model YeuBep.ViewModels.Recipe.RecipeViewModel
<link rel="stylesheet" href="~/css/components/recipe-card-search.css" />
<div class="pt-4">
    <div class="row">
        <div class="col-md-8">
            <a href="@Url.Action("Slug", "Recipe", new {Slug = @Model.Slug})" style="text-decoration: none">
                <div class="recipe-card">
                    <img src="@Model.Avatar" alt="Thịt Ba Rọi Xào Mắm Ruốc" class="recipe-image">
                    
                    <div class="recipe-content">
                        <div class="recipe-header">
                            <h3 class="recipe-title">@Model.Title</h3>
                            <button class="bookmark-btn">
                                <i class="bi bi-bookmark"></i>
                            </button>
                        </div>

                        <div class="recipe-tags">
                            @{
                                var integration = Model.IngredientPart.SelectMany(x => x.Ingredients).ToList() ?? [];
                                @for (int i = 0; i< (integration.Count() >7 ? 7 : integration.Count()); i++)
                                {
                                    var element = integration.ElementAt(i);
                                    <span class="tag">@element</span>
                                }
                            }
                        </div>

                        <div class="recipe-meta">
                            <div class="meta-item">
                                <i class="bi bi-clock"></i>
                                <span>Thời gian nấu <strong>@Model.TimeToCook</strong></span>
                            </div>
                            <div class="meta-item">
                                <i class="bi bi-people"></i>
                                <span>Khẩu phần ăn <strong>@Model.PortionCount</strong></span>
                            </div>
                        </div>

                        <div class="recipe-author">
                            <img src="@Model.CreatedBy.Avatar" alt="Bốn Bon" class="author-avatar">
                            <span class="author-name">@Model.CreatedBy.UserName</span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
