@model YeuBep.ViewModels.Errors.UnauthorizedViewModel


@{
    ViewData["Title"] = "Không có quyền truy cập";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">

            <h1 class="display-4 text-warning fw-bold">401</h1>
            <h2 class="fw-semibold">@Model.Message</h2>

            <p class="text-muted mt-2">
                <strong>Trang yêu cầu:</strong> @Model.RequestedPath
            </p>

            <p class="text-muted">
                <small>@Model.TimeStamp.ToString("dd/MM/yyyy HH:mm:ss")</small>
            </p>

            <a href="/" class="btn btn-primary mt-3">
                <i class="bi bi-house-fill"></i> Về trang chủ
            </a>

            <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary mt-3 ms-2">
                <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
            </a>
        </div>
    </div>
</div>